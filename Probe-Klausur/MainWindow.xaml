<Window x:Class="Probe_Klausur.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Probe_Klausur"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Seminare"
                   FontSize="22" 
                   Margin="0 0 0 10"/>

        <ListView x:Name="DSeminare" Grid.Row="1" Margin="0 0 0 10">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Gray"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="10"
                            Width="600"
                            Margin="0 0 0 20">

                        <StackPanel>

                            <StackPanel >
                                
                                <TextBlock Text="{Binding Titel}" FontSize="18" FontWeight="Bold"  />

                                <TextBlock Text="{Binding Datum}" FontSize="14" Foreground="Blue"/>
                                
                            </StackPanel>

                          
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Center">
            <Button x:Name="btBuchen" Content="Buchen" Click="BtnBuch_Click" Height="50" Width="150" Margin="0 0 0 10"/>

            <TextBlock Name="msg1b1"
                       FontSize="16"
                       Foreground="Green"
                       TextAlignment="Center"/>
        </StackPanel>

    </Grid>
</Window>
